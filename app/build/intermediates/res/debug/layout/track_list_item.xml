<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/track_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/track_text"
        android:textSize="15dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/track_image"
        android:layout_toEndOf="@+id/track_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artist_name"
        android:textSize="15dp"
        android:layout_below="@+id/track_text"
        android:layout_alignLeft="@+id/track_text"
        android:layout_alignStart="@+id/track_text" />

</RelativeLayout><!-- From: file:/home/erik/Documents/Udacity/Intro_Android_Dev/SpotifyStreamer/app/src/main/res/layout/track_list_item.xml -->